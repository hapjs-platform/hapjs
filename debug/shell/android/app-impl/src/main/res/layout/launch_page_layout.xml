<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/tip_icon"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="#4D000000"
        android:text="@string/launch_page_test_desc"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">
        <EditText
            android:id="@+id/pkg"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="@string/launch_page_pkg_hint"/>

        <ImageView
            android:id="@+id/clear_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:src="@drawable/clear"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">
        <EditText
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:background="@drawable/edit_text_bg"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="@string/launch_page_page_hint"/>

        <ImageView
            android:id="@+id/clear_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:src="@drawable/clear"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/btn_launch"
        android:text="@string/btn_launch_app"
        android:background="@drawable/btn_bg"
        android:textSize="18sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:paddingVertical="14dp"
        android:gravity="center"
        android:enabled="false"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>