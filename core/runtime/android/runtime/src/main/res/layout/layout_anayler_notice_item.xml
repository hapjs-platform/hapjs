<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:background="@drawable/selector_analyzer_notice_item_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/analyzer_notice_item_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_analyzer_notice_dot_error" />

    <org.hapjs.analyzer.views.ExpandTextView
        android:id="@+id/analyzer_notice_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:textColor="#fff"
        android:textSize="12sp"
        app:expandLines="1"
        app:lessText="@string/analyzer_less_text_tip"
        app:lessTextColor="#5290EA"
        app:moreText="@string/analyzer_more_text_tip"
        app:moreTextColor="#5290EA" />
</LinearLayout>
